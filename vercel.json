{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": { "maximumFileSizeToCacheInBytes": 10000000 }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/index.html" }
    ],
    "build": {
      "env": {
        "NPM_FLAGS": "--legacy-peer-deps"
      }
    }
  }